{
    "name": "@designbasekorea/library",
    "version": "0.1.0",
    "description": "Designbase 피그마 플러그인 공통 디자인시스템 및 컴포넌트 라이브러리",
    "private": true,
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "test": "turbo run test",
        "clean": "turbo run clean",
        "changeset": "changeset",
        "version-packages": "changeset version",
        "release": "changeset publish",
        "docs:dev": "cd docs && npm run dev",
        "docs:build": "cd docs && npm run build",
        "storybook": "storybook dev -p 6006",
        "storybook:build": "storybook build",
        "storybook:deploy": "storybook-to-ghpages",
        "prepublishOnly": "npm run clean && npm run build",
        "publish:packages": "npm run build && npm publish --workspaces",
        "publish:ui": "cd packages/ui && npm publish",
        "publish:theme": "cd packages/theme && npm publish",
        "publish:tokens": "cd packages/tokens && npm publish",
        "publish:icons": "cd packages/icons && npm publish",
        "tokens:build": "cd packages/tokens && npm run build",
        "tokens:copy": "node scripts/copy-tokens.js",
        "theme:copy": "node scripts/copy-theme.js",
        "theme:build": "npm run tokens:copy && cd packages/theme && npm run build",
        "ui:build": "npm run theme:build && cd packages/ui && npm run build",
        "build:all": "npm run tokens:build && npm run theme:build && npm run ui:build",
        "example:01": "cd examples/01-basic-button && npm run dev",
        "example:02": "cd examples/02-icon-gallery && npm run dev",
        "example:03": "cd examples/03-form-components && npm run dev",
        "example:04": "cd examples/04-card-layout && npm run dev",
        "example:05": "cd examples/05-modal-dialog && npm run dev",
        "example:06": "cd examples/06-navigation-menu && npm run dev",
        "example:07": "cd examples/07-dashboard-layout && npm run dev",
        "example:08": "cd examples/08-ecommerce-card && npm run dev",
        "example:09": "cd examples/09-landing-page && npm run dev",
        "example:10": "cd examples/10-admin-panel && npm run dev",
        "example:11": "cd examples/11-portfolio-site && npm run dev",
        "example:12": "cd examples/12-blog-layout && npm run dev",
        "example:gallery": "cd examples/design-examples && npm run dev"
    },
    "devDependencies": {
        "@changesets/cli": "^2.29.6",
        "@storybook/addon-essentials": "^8.6.14",
        "@storybook/addon-interactions": "^8.6.14",
        "@storybook/react": "^8.6.14",
        "@storybook/react-vite": "^8.6.14",
        "@storybook/testing-library": "^0.2.2",
        "@types/classnames": "^2.3.0",
        "@typescript-eslint/eslint-plugin": "^6.7.3",
        "@typescript-eslint/parser": "^6.7.3",
        "chalk": "^4.1.2",
        "chokidar": "^3.5.3",
        "eslint": "^8.50.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-typescript": "^17.1.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "prettier": "^3.0.3",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "storybook": "^8.6.14",
        "turbo": "^1.10.14",
        "typescript": "^5.2.2",
        "vite": "^5.0.0"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/designbase/designbase-library.git"
    },
    "license": "MIT",
    "dependencies": {
        "classnames": "^2.5.1"
    }
}