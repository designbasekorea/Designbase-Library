    "@rollup/plugin-typescript": "^11.1.3",
    "@svgr/core": "^8.1.0",
    "@types/react": "^18.2.21",
    "glob": "^10.3.3",
    "rimraf": "^5.0.1",
    "rollup": "^3.29.2",
    "svgo": "^3.0.2",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/designbase/designbase-library.git",
