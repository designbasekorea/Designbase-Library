    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.esm.js",
            "require": "./dist/index.js",
            "default": "./dist/index.esm.js"
        },
        "./dist/index.css": "./dist/index.css",
        "./package.json": "./package.json"
    },
    "sideEffects": [
        "*.css",
        "*.scss"
    ],
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "node scripts/copy-theme-css.js && rollup -c",
        "dev": "rollup -c --watch",
        "clean": "rimraf dist",
